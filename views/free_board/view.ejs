<%- include('../partials/header') %>

<div class="board-container">
    <div class="view-header">
        <h2><%= post.title %></h2>
        <div class="view-meta">
            <span>작성자: <%= post.author %></span> |
            <span>작성일: <%= new Date(post.created_at).toLocaleString() %></span> |
            <span>조회수: <%= post.views %></span>
        </div>
    </div>

    <div class="view-content">
        <%- post.content.replace(/\n/g, '<br>') %>
    </div>

    <div class="board-actions">
        <a href="/free" class="btn">목록</a>
        <a href="/free/<%= post.id %>/edit" class="btn">수정</a>
        <form action="/free/<%= post.id %>/delete" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger" onclick="return confirm('정말로 삭제하시겠습니까?')">삭제</button>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>
